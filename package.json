{
  "name": "employee-management-monorepo",
  "version": "1.0.0",
  "description": "Employee Management System - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend", 
    "bot"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:bot\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:bot": "cd bot && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:bot",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:bot": "cd bot && npm run build",
    "install:all": "npm install && npm run install:backend && npm run install:frontend && npm run install:bot",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:bot": "cd bot && npm install",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:bot",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:bot": "cd bot && npm run lint",
    "test": "npm run test:backend && npm run test:frontend && npm run test:bot",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:bot": "cd bot && npm test",
    "clean": "npm run clean:backend && npm run clean:frontend && npm run clean:bot",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:frontend": "cd frontend && rm -rf node_modules build",
    "clean:bot": "cd bot && rm -rf node_modules dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "formik": "^2.4.6",
    "react-icons": "^5.5.0",
    "yup": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoxly/arrive-rf.git"
  },
  "keywords": [
    "employee-management",
    "telegram-bot",
    "react",
    "nodejs",
    "postgresql",
    "docker"
  ],
  "author": "Your Name",
  "license": "MIT"
}
